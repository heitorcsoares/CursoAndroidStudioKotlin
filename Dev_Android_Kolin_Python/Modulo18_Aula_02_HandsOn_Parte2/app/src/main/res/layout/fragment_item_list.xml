<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.example.hqawasomeapp.data.DataState"/>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.example.hqawasomeapp.HQViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list"
            android:name="com.example.hqawasomeapp.hqFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:background="#4E4B4B"
            android:backgroundTint="#4E4B4B"
            app:layoutManager="LinearLayoutManager"
            tools:context=".hqHome.HQFragment"
            tools:listitem="@layout/fragment_item"
            android:visibility="@{viewModel.appState == DataState.Success ? View.VISIBLE : View.GONE}"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="@{viewModel.appState == DataState.Loading ? View.VISIBLE : View.GONE}">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="@{viewModel.appState == DataState.Error ? View.VISIBLE : View.GONE}">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="10dp"
                android:text="@string/error_msg"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </LinearLayout>

</layout>